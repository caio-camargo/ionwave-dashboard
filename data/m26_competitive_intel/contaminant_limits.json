      {
        "test": "Heavy metals panel",
        "what_it_covers": "Lead, mercury, arsenic, cadmium",
        "frequency": "Every batch",
        "lab_type": "ISO 17025 accredited",
        "estimated_cost": "$150-300 per panel",
        "turnaround": "5-7 business days"
      },
      {
        "test": "Microbiological testing",
        "what_it_covers": "Total plate count, yeast, mold, E.coli, Salmonella, S.aureus, coliforms",
        "frequency": "Every batch",
        "lab_type": "ISO 17025 accredited",
        "estimated_cost": "$200-400 per panel",
        "turnaround": "7-10 business days"
      },
      {
        "test": "Full mineral analysis",
        "what_it_covers": "Complete mineral profile verification (all 78+ minerals claimed)",
        "frequency": "Every batch",
        "lab_type": "ICP-MS capable lab",
        "estimated_cost": "$300-500 per analysis",
        "turnaround": "7-14 business days"
      },
      {
        "test": "Pesticide screen",
        "what_it_covers": "Common pesticide residues",
        "frequency": "Quarterly or per new supplier lot",
